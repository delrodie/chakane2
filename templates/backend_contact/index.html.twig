{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <h1>Contact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tel1</th>
                <th>Tel2</th>
                <th>Email</th>
                <th>Gmail</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.tel1 }}</td>
                <td>{{ contact.tel2 }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.gmail }}</td>
                <td>
                    <a href="{{ path('app_backend_contact_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('app_backend_contact_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_backend_contact_new') }}">Create new</a>
{% endblock %}
