{% extends 'base.html.twig' %}

{% block title %}Creation{% endblock %}

{% block body %}
    <h1>Creation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ creation.id }}</td>
            </tr>
            <tr>
                <th>Media</th>
                <td>{{ creation.media }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ creation.slug }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ creation.statut ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_backend_creation_index') }}">back to list</a>

    <a href="{{ path('app_backend_creation_edit', {'id': creation.id}) }}">edit</a>

    {{ include('backend_creation/_delete_form.html.twig') }}
{% endblock %}
