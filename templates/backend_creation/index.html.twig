{% extends 'backend_layout.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="card bg-light-info shadow-none position-relative overflow-hidden">
            <div class="card-body px-4 py-3">
                <div class="row align-items-center">
                    <div class="col-9">
                        <h4 class="fw-semibold mb-8">Product Detail</h4>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a class="text-muted" href="{{ path('app_backend_dashboard_index') }}">Dashboard</a></li>
                                <li class="breadcrumb-item" aria-current="page">detail</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-3">
                        <div class="text-center mb-n5">
                            <span class="head-icon"><i class="ti-package"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="shop-detail">
            <div class="card shadow-none border">
                <div class="card-header">
                    <div class="row">
                        <div class="col"><h5 class="mb-2 fw-semibold fs-4">Liste</h5></div>
                        <div class="col">
                            <div class="action">
                                <a href="{{ absolute_url(path('app_backend_creation_new')) }}" class="btn btn-outline-primary">
                                    <i class="ti-plus"></i> &nbsp; Ajouter
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="related-products pt-7">
                        <div class="row">
                            {% for creation in creations %}
                                <div class="col-sm-6 col-xl-3">
                                    <div class="card hover-img overflow-hidden rounded-2">
                                        <div class="position-relative">
                                            <a href="javascript:void(0)"><img src="{{ absolute_url(asset('upload/creations/' ~ creation.media)) }}" class="card-img-top rounded-0" alt="{{ creation.slug }}"></a>
                                            {{ creation.statut ? '<span class="badge bg-success">Actif</span>' : '<span class="badge bg-danger">Inactif</span>' }}
                                        </div>
                                        <div class="card-body pt-3 p-4">
                                            <div class="d-flex align-items-center justify-content-around">
                                                <a href="{{ path('app_backend_creation_edit', {'id': creation.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                                                {{ include('backend_creation/_delete_form.html.twig') }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-4">
                        {{ knp_pagination_render(creations) }}
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.20/dist/sweetalert2.min.css">
{% endblock %}

