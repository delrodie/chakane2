{% extends 'base.html.twig' %}

{% block title %}Collection{% endblock %}

{% block body %}
    <h1>Collection</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ collection.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ collection.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ collection.contenu }}</td>
            </tr>
            <tr>
                <th>Media</th>
                <td>{{ collection.media }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>{{ collection.tags }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ collection.slug }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ collection.updatedAt ? collection.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_backend_collection_index') }}">back to list</a>

    <a href="{{ path('app_backend_collection_edit', {'id': collection.id}) }}">edit</a>

    {{ include('backend_collection/_delete_form.html.twig') }}
{% endblock %}
