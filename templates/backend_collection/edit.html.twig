{% extends 'backend_layout.html.twig' %}

{% block title %}{{ parent() }} Gestion liste des collections{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="card bg-light-info shadow-none position-relative overflow-hidden">
            <div class="card-body px-4 py-3">
                <div class="row align-items-center">
                    <div class="col-9">
                        <h4 class="fw-semibold mb-8">Gestion des collections</h4>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a class="text-muted" href="#">Divers</a></li>
                                <li class="breadcrumb-item"><a class="text-muted" href="#">Page</a></li>
                                <li class="breadcrumb-item" aria-current="page">Collection</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-3">
                        <div class="text-center mb-n5">
                            <span class="head-icon"><i class="ti-file"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <section>
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col"><h5 class="mb-2 fw-semibold fs-4">Formulaire</h5></div>

                            </div>

                        </div>
                        <div class="card-body">
                            <div id="table-loader" class="table-loader">
                                <div class="loader"></div>
                            </div>
                            <div class="table-responsive">
                                {{ include('backend_collection/_form.html.twig', {'button_label': 'Modifier'}) }}

                                {{ include('backend_collection/_delete_form.html.twig') }}
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>


    </div>

{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/css/dropify.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput.css">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/js/dropify.min.js"></script>
    <script src="{{ absolute_url(asset('asset/js/upload-init.js')) }}"></script>
    <script src="{{ absolute_url(asset('backoffice/vendor/tinymce/tinymce.min.js')) }}"></script>
    <script>
        tinymce.init({
            selector: 'textarea#collection_contenu',  // change this value according to your HTML
            language_url: '{{ absolute_url(asset('backoffice/vendor/tinymce/langs/fr_FR/langs/fr_FR.js')) }}',
            plugins: [
                'advlist', 'autolink', 'link', 'image', 'lists', 'charmap', 'preview', 'anchor', 'pagebreak',
                'searchreplace', 'wordcount', 'visualblocks', 'visualchars', 'code', 'fullscreen', 'insertdatetime',
                'media', 'table', 'emoticons', 'template', 'help'
            ],
            a_plugin_option: true,
            a_configuration_option: 400,
            menubar: true,
            toolbar: 'undo redo | styles | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image | print preview media | forecolor backcolor emoticons',

            setup: function (editor) {
                editor.on('init', function () {
                    var textarea = document.getElementById('collection_contenu');
                    editor.setContent(textarea.value);
                    textarea.style.display = 'none';
                });
            }
        });
    </script>
    <script>
        $(document).ready(function () {
            console.log('ouvert')
            $('#formDelete').submit(function (e) {
                e.preventDefault()
                Swal.fire({
                    title: 'Voulez-vous vraiment supprimer cette collection ?',
                    text: "Une fois confirmÃ©e, vous ne pourrez plus la recuperer!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Oui, supprimer la!',
                    cancelButtonText: "Annuler"
                }).then((result) => {
                    if (result.isConfirmed){
                        e.target.submit();
                    }
                })
            })
        })
    </script>
{% endblock %}