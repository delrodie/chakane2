{% extends 'backend_layout.html.twig' %}

{% block title %}{{ parent() }} Gestion liste des produits{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="card bg-light-info shadow-none position-relative overflow-hidden">
            <div class="card-body px-4 py-3">
                <div class="row align-items-center">
                    <div class="col-9">
                        <h4 class="fw-semibold mb-8">Gestion des journalisations</h4>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a class="text-muted" href="#">Param√®tres</a></li>
                                <li class="breadcrumb-item"><a class="text-muted" href="#">Monitoring</a></li>
                                <li class="breadcrumb-item" aria-current="page">Liste</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-3">
                        <div class="text-center mb-n5">
                            <span class="head-icon"><i class="ti-image"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <section>
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col"><h5 class="mb-2 fw-semibold fs-4">Liste</h5></div>

                            </div>

                        </div>
                        <div class="card-body">
                            <div id="table-loader" class="table-loader">
                                <div class="loader"></div>
                            </div>
                            <div class="table-responsive">
                                <table id="listes" class="table  border table-striped table-bordered display text-nowrap" style="width: 100%;">
                                    <thead>
                                    <tr>
                                        <th class="text-center text-uppercase">#</th>
                                        <th class="text-center text-uppercase">Dates</th>
                                        <th class="text-center text-uppercase">Actions</th>
                                        <th class="text-center text-uppercase">Adresses IP</th>
                                        <th class="text-center text-uppercase">Pays</th>
                                        <th class="text-center text-uppercase">Region</th>
                                        <th class="text-center text-uppercase">Ville</th>
                                        <th class="text-center text-uppercase">Localisation</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for log in logs %}
                                        <tr>
                                            <td>{{ loop.index }}</td>
                                            <td class="text-center">{{ log.datetime|date('Y-m-d H:i:s') }}</td>
                                            <td class="text-left">{{ log.username }} {{ log.action }}</td>
                                            <td class="text-center">{{ log.ip }}</td>
                                            <td class="text-left">{{ log.country ? log.country : '-' }}</td>
                                            <td class="text-left">{{ log.region ? log.region : '-' }}</td>
                                            <td class="text-left">{{ log.city ? log.city : '-' }}</td>
                                            <td class="text-left">{{ log.location ? log.location : '-' }}</td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="3">Aucun enregistrement</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>


    </div>

{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('backoffice/vendor/css/prism.min.css') }}">
    <link rel="stylesheet" href="{{ asset('backoffice/vendor/DataTables/datatables.min.css') }}">
    <link rel="stylesheet" href="{{ absolute_url(asset('backoffice/vendor/css/select2.min.css')) }}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('backoffice/vendor/js/prism.js') }}"></script>
    <script src="{{ asset('backoffice/vendor/DataTables/datatables.min.js') }}"></script>
    <script src="{{ absolute_url(asset('backoffice/vendor/js/select2.full.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('backoffice/vendor/js/select2.min.js')) }}"></script>
    <script>
        $(document).ready(function() {
            var tableLoader = $('#table-loader');
            var table = $('#listes');

            table.on('init.dt', function() {
                tableLoader.find('.loader').hide();
                table.show();
            });

            table.DataTable({
                // Configurations du DataTable
                dom: 'Bfrtip',
                scrollX: true,
                buttons: [
                    'copy', 'excel', 'pdf'
                ],
                initComplete: function() {
                    tableLoader.find('.loader').show();
                    table.hide();
                }
            });
        });
    </script>
    <script>
        $(".select2").select2();
    </script>
{% endblock %}
